<prism:PrismApplication x:Class="FBDR.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FBDR"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:sys="clr-namespace:System;assembly=netstandard">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <sys:Double x:Key="DefaultFontSize">15</sys:Double>
                    <SolidColorBrush x:Key="FacebookBlue" Color="#4267B2"/>
                    <SolidColorBrush x:Key="Gray" Color="#E8E8E8"/>
                </ResourceDictionary>
                <ResourceDictionary Source="DefaultStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</prism:PrismApplication>
